<apex:page controller="selectCtrl">
    <apex:form>
        <apex:pageBlock title="顧客選択画面(Custom)">
            <apex:pageBlockSection title="選択機能" collapsible="false">
                <apex:inputField value="{!oppo.custom_select__c}"></apex:inputField>
            </apex:pageBlockSection>

            <apex:pageBlockButtons>
                <apex:commandButton value="Previous" action="{!doPrevious}"></apex:commandButton>
                <apex:commandButton value="Next" action="{!doNext}"></apex:commandButton>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>